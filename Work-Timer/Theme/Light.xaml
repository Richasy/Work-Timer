<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WorkTimer.Theme">
    <AcrylicBrush x:Key="SideBackground" BackgroundSource="HostBackdrop" TintColor="White" FallbackColor="#f9fafe" TintOpacity="0.8"/>
    <AcrylicBrush x:Key="PaneBackground" BackgroundSource="Backdrop" TintColor="White" FallbackColor="#f9fafe" TintOpacity="0.8"/>
    <SolidColorBrush x:Key="MaskBackground" Color="White" Opacity="0.6"/>
    <SolidColorBrush x:Key="PopupBackground" Color="#f2f7fd"/>
    <AcrylicBrush x:Key="PageBackground" BackgroundSource="HostBackdrop" TintColor="White" FallbackColor="#f9fafe" TintOpacity="0.8"/>
    <SolidColorBrush x:Key="PageOverBackground" Color="#DEE5EB"/>
    <SolidColorBrush x:Key="CardBackground" Color="White"/>
    <SolidColorBrush x:Key="CardBackgroundOver" Color="#DAE1E8"/>
    <SolidColorBrush x:Key="PointerOverMaskBackground" Color="Gray" Opacity="0.2"/>
    <SolidColorBrush x:Key="TransparentBackground" Color="White" Opacity="0.01"/>

    <SolidColorBrush x:Key="ImportantTextColor" Color="#000000"/>
    <SolidColorBrush x:Key="NormalTextColor" Color="#2E2F33"/>
    <SolidColorBrush x:Key="TipTextColor" Color="#999AA1"/>
    <SolidColorBrush x:Key="MaskTextColor" Color="#d3dbe8"/>

    <Color x:Key="ShadowColor">#AAAAAA</Color>

    <SolidColorBrush x:Key="LineColor" Color="#E1E1E1"/>
    <SolidColorBrush x:Key="LineColorOver" Color="#D9D9D9"/>

    <SolidColorBrush x:Key="ProgressColor" Color="#E1E1E1" Opacity="0.4"/>

    <SolidColorBrush x:Key="PrimaryColorOpacity" Color="#4AC8FC" Opacity="0.1"/>
    <LinearGradientBrush x:Key="PrimaryColor" StartPoint="0,0" EndPoint="1,1">
        <GradientStopCollection>
            <GradientStop Color="#4AC8FC" Offset="0"/>
            <GradientStop Color="#1D79EB" Offset="1"/>
        </GradientStopCollection>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="PrimaryColorOver" Color="#1D79EB"/>
    <SolidColorBrush x:Key="SecondaryColorOpacity" Color="#D485EF" Opacity="0.2"/>
    <LinearGradientBrush x:Key="SecondaryColor" StartPoint="0,0" EndPoint="1,1">
        <GradientStopCollection>
            <GradientStop Color="#D485EF" Offset="0"/>
            <GradientStop Color="#AA2DD1" Offset="1"/>
        </GradientStopCollection>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="SecondaryColorOver" Color="#AA2DD1"/>
    <SolidColorBrush x:Key="SuccessColorOpacity" Color="#99B42D" Opacity="0.2"/>
    <SolidColorBrush x:Key="SuccessColor" Color="#ADC744"/>
    <SolidColorBrush x:Key="SuccessColorOver" Color="#A1BD2F"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#F63340"/>
    <SolidColorBrush x:Key="ErrorColorOpacity" Color="#F63340" Opacity="0.2"/>
    <SolidColorBrush x:Key="ErrorColorOver" Color="#E32528"/>
</ResourceDictionary>
